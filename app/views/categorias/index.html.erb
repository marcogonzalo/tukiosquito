<h1>Listing categorias</h1>
<p><%= link_to 'Nueva categoría', new_categoria_path %></p>
<table>
  <tr>
    <th>Nombre</th>
    <th>Descripci&oacute;n</th>
    <th>Acciones</th>
  </tr>

<% @categorias.each do |categoria| %>
  <tr>
    <td class="alcentro"><%= categoria.nombre %></td>
    <td><%= categoria.descripcion %></td>
    <td class="alcentro"><%= link_to 'Mostrar', categoria %> 
        | <%= link_to 'Editar', edit_categoria_path(categoria) %>
        | <%= link_to 'Eliminar', categoria, confirm: '¿Seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

