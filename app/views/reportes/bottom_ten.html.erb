<h1>Productos menos vendidos</h1>
<table>
  <tr>
    <th>Nombre de la categor&iacute;a</th>
    <th>Producto</th>
    <th>Monto generado</th>
  </tr>
<% 
  @productos.each do |producto| 
    p = Producto.find(producto.producto_id)
    c = Categoria.find(producto.categoria_id)
%>
  <tr>
    <td class="alcentro"><%= c.nombre %></td>
    <td class="alcentro"><%= p.nombre %></td>
    <td class="aladerecha"><%= number_to_currency(producto.total, :unit=>"Bs", :delimeter=>".", :separator=>",") %></td>
  </tr>
<% end %>
</table>
