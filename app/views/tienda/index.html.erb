<% unless @cat_actual.nil? %>
<h1><%= @cat_actual.nombre %></h1>
<p><%= @cat_actual.descripcion %></p>
<% end %>
<table>
  <tr>
    <th>Imagen</th>
    <th>Producto</th>
    <th>Precio</th>
    <th>Disponibles</th>
    <th>Acci&oacute;n</th>
  </tr>

<% @productos.each do |producto| %>
  <tr>
    <td><%= link_to ("<img src=\""+producto.id.to_s+"\">").html_safe, producto %></td>
    <td><%= link_to producto.nombre, producto %></td>
    <td><%= number_to_currency(producto.precio, :unit=>"Bs", :delimeter=>",") %></td>
    <td><%= producto.cantidad %></td>
    <td>
  <% if usuario_actual then %>  
      <%= button_to "Agregar", :action=>'agregar_al_carro', :id=>producto.id %>
  <% else %>
      Seleccionar
  <% end %>
    </td>
  </tr>
<% end %>
</table>
